<%- model_class = Innovation -%>
<div class="container">
 <div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
 </div>

 <p id="notice"><%= notice %></p>

 <div class="row">
  <% @innovations.each do |innovation| %>
    <div class = "col-md-3">
      <div class = "innovation-box">
        <picture>
        <%= image_tag(innovation.image, class: 'fit-image') %>
        </picture>
          <ul>
            <li><%= innovation.InnovationName %></li>
            <li><%= innovation.InnovationID %></li>
            <li><%= innovation.InnovationCategory %></li>
            <li><%= innovation.IsInnovationFavorite? %></li>
            <li><%=  link_to('Lets Go!', url_with_protocol(innovation.InnovationTargetUrl),:target => :blank, :class => 'btn btn-warning')%></li>
          <% if can? :update, innovation %>
            <li><%= link_to 'Show', innovation %> ||
                <%= link_to 'Edit', edit_innovation_path(innovation) %> ||
                <%= link_to 'Destroy', innovation, method: :delete, data: { confirm: 'Are you sure?' } %>
            </li>
          <% end %>
        </ul>
      </div><!--end div innovation box -->
    </div><!--end div col-md-4 -->
  <% end %>
 </div><!--end row -->

 <div>
   <%= link_to 'New Innovation', new_innovation_path %>
 </div>
</div><!--finished container-->