<%- model_class = Innovation -%>
<div class="container">
 <!--<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
 </div>-->

 <p id="notice"><%= notice %></p>

 <div class="row">
  <% @innovations.each do |innovation| %>
    <div class = "col-md-3">
      <div class = "innovation-box">
        <picture>
        <%= image_tag(innovation.image, class: 'fit-image') %>
        </picture>
          <ul>
            <li><%= link_to(innovation.InnovationName, url_with_protocol(innovation.InnovationTargetUrl),:target => :blank) %></li>
            <li><p  padding-top: 10%;><%= innovation.description %></p></li>
            <div class="dropdown-divider"></div>
            <li><%=  link_to('Lets Go!', url_with_protocol(innovation.InnovationTargetUrl),:target => :blank, :class => 'btn btn-warning')%><div class="float-right"><font size="3" color = #0000FF><%= number_to_currency(innovation.price, :unit => "$")%></font></div></li>
          <% if can? :update, innovation %>
            <li><%= link_to 'Show', innovation %> ||
                <%= link_to 'Edit', edit_innovation_path(innovation) %> ||
                <%= link_to 'Destroy', innovation, method: :delete, data: { confirm: 'Are you sure?' } %>||
                <%= link_to 'New Innovation', new_innovation_path %>
            </li>
          <% end %>
        </ul>
      </div><!--end div innovation box -->
    </div><!--end div col-md-4 -->
  <% end %>
 </div><!--end row -->


</div><!--finished container-->