
<%= simple_form_for(@innovation) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :InnovationID %>
    <%= f.input :InnovationName %>
    <%= f.input :InnovationCategory %>
    <%= f.input :IsInnovationFavorite? %>
    <%= f.input :InnovationTargetUrl %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
