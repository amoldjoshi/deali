<%- model_class = DailyDeal -%>

<div class="container">

  <div class="card bg-light mb-3" style="max-width: 200 rem; opacity: 0.8;">
    <h4 class="card-header"><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h4><br>
    <p style="margin-left: 2.5em">Keep this open. Click 'Lets go!'. New daily deals site open on new tab, browse and come back to this tab.</p>
  </div>



 <p id="notice"><%= notice %></p>

  <div class="row">
    <% @daily_deals.each do |daily_deal| %>
      <div class = "col-md-2">
        <div class = "logo-box">
          <%= image_tag(daily_deal.logo, class: 'fit-image') %>
           <div class="container">
            <h5><%= link_to  daily_deal.DealerName, url_with_protocol(daily_deal.DealerTargetUrl),:target => :blank %></h5> 
            <p><%= daily_deal.DealerCategory %></p>
            <p><%= daily_deal.IsDealerFavorite? %></p>
            <div class="dropdown-divider"></div>
            <p><%=  link_to('Lets Go!', url_with_protocol(daily_deal.DealerTargetUrl),:target => :blank, :class => 'btn btn-warning')%></p>
           </div><!--container-->
           <ul>
            <% if can? :update, daily_deal %>
              <li><%= link_to 'Show', daily_deal %>||
                <%= link_to 'Edit', edit_daily_deal_path(daily_deal) %>||
                <%= link_to 'Destroy', daily_deal, method: :delete, data: { confirm: 'Are you sure?' } %>||
                <%= link_to 'New Weekly Add', new_daily_deal_path %>
              </li>
            <%end%>
          </ul>
        </div><!--end div innovation box -->
      </div><!--end div col-md-2 -->
    <% end %>
  </div><!--end row -->
  <div>
      
  </div>
</div><!--Container-->