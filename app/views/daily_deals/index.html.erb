<p id="notice"><%= notice %></p>

<h1>Daily Deals</h1>

<table>
  <thead>
    <tr>
      <th>Dealerid</th>
      <th>Dealername</th>
      <th>Dealercategory</th>
      <th>Isdealerfavorite?</th>
      <th>Dealertargeturl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_deals.each do |daily_deal| %>
      <tr>
        <td><%= daily_deal.DealerID %></td>
        <td><%= daily_deal.DealerName %></td>
        <td><%= daily_deal.DealerCategory %></td>
        <td><%= daily_deal.IsDealerFavorite? %></td>
        <td><%= daily_deal.DealerTargetUrl %></td>
        <td><%= link_to 'Show', daily_deal %></td>
        <td><%= link_to 'Edit', edit_daily_deal_path(daily_deal) %></td>
        <td><%= link_to 'Destroy', daily_deal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

