
<%= simple_form_for(@deal_hunter) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :HunterID %>
    <%= f.input :HunterName %>
    <%= f.input :HunterCategory %>
    <%= f.input :IsHunterFavorite? %>
    <%= f.input :HunterTargetUrl %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
