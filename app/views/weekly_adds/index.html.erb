<%- model_class = WeeklyAdd -%>
<div class="container-fluid">

 <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-md-3">
      <%= render 'shared/temp'%>
    </div>

  <% @weekly_adds.each do |weekly_add| %>
      <div class = "col-md-2">
        <div class = "logo-box">
          <%= image_tag(weekly_add.logo, class: 'fit-image') %>
           <div class="container">
            <h5><%= link_to weekly_add.AddName, url_with_protocol(weekly_add.AddTargetUrl),:target => :blank %></h5>
            <p><%= weekly_add.AddCategory %></p>
            <div class="dropdown-divider"></div>
            <p<%=  link_to('Lets Go!', url_with_protocol(weekly_add.AddTargetUrl),:target => :blank, :class => 'btn btn-warning')%></div></p>
            
           </div><!--container-->
            <ul>
            <% if can? :update, weekly_add %>
              <li><%= link_to 'Show', weekly_add %>||
                <%= link_to 'Edit', edit_weekly_add_path(weekly_add) %>||
                <%= link_to 'Destroy', weekly_add, method: :delete, data: { confirm: 'Are you sure?' } %>||
                <%= link_to 'New Weekly Add', new_weekly_add_path %>
              </li>
            <%end%>
            </ul>
        </div><!--end div logobox. -->
      </div><!--end div col-md-2 -->
    <% end %>
  </div><!--end row -->
</div><!--container-fluid-->
